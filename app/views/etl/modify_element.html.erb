<div class="container">
  <form action="/update?table=<%=@table%>&id=<%=@element.id%>&s=<%=@system%>", method='post'>
    <% if @table == 'dbo.EMPLEADOS' %>
      <p>Modifcando Empleado</p>
      <%= label_tag :nombre %>
      <%= text_field_tag (:nombre), @element.nombre %>
      <%= label_tag :curp %>
      <%= text_field_tag (:curp), @element.curp %>

    <%elsif @table == 'dbo.TIPO_EMPLEADOS'%>
      <p>Modifcando tipo de empleado</p>
      <%= label_tag :nombre %>
      <%= text_field_tag (:nombre), @element.nombre %>
      <%= label_tag :salario %>
      <%= text_field_tag (:salario), @element.salario %>

    <%elsif @table == 'dbo.RECURSO_MATERIAL'%>
      <p>Modifcando el recurso material</p>
      <%= label_tag :nombre %>
      <%= text_field_tag (:nombre), @element.nombre %>
      <%= label_tag :categoria %>
      <%= text_field_tag (:categoria), @element.categoria %>

    <%elsif @table == 'dbo.TARJETA'%>
      <p>Modifcando la tarjeta</p>
      <%= label_tag :estado %>
      <%= text_field_tag (:estado), @element.estado %>

    <%elsif @table == 'dbo.ESTANCIA'%>
      <p>Modifcando la estancia</p>
      <%= label_tag :fechainicio %>
      <%= text_field_tag (:fechainicio), @element.fechainicio %>
      <%= label_tag :fechafin %>
      <%= text_field_tag (:fechafin), @element.fechafin %>
      <%= label_tag :duracion %>
      <%= text_field_tag (:duracion), @element.duracion %>
      <%= label_tag :subtotal %>
      <%= text_field_tag (:subtotal), @element.subtotal %>
      <%= label_tag :total %>
      <%= text_field_tag (:total), @element.total %>
      <%= label_tag :placa %>
      <%= text_field_tag (:placa), @element.placa %>

    <%elsif @table == 'dbo.TIPO_AREA'%>
      <p>Modifcando el tipo de area </p>
      <%= label_tag :nombre %>
      <%= text_field_tag (:nombre), @element.nombre %>

    <%elsif @table == 'dbo.AREA'%>
      <p>Modifcando el area </p>
      <%= label_tag :nombre %>
      <%= text_field_tag (:nombre), @element.nombre %>
      <%= label_tag :descripcion %>
      <%= text_field_tag (:descripcion), @element.descripcion %>
      <%= label_tag :id_tipoarea %>
      <%= text_field_tag (:id_tipoarea), @element.id_tipoarea %>

    <%elsif @table == 'dbo.CAJERO'%>
      <p>Modifcando el cajero </p>
      <%= label_tag :dineroactual %>
      <%= text_field_tag (:dineroactual), @element.dineroactual %>
      <%= label_tag :fechaactual %>
      <%= text_field_tag (:fechaactual), @element.fechaactual %>
      <%= label_tag :periodicidadmantenimiento %>
      <%= text_field_tag (:periodicidadmantenimiento), @element.periodicidadmantenimiento %>
      <%= label_tag :estado %>
      <%= text_field_tag (:estado), @element.estado %>
    <% end %>

    <input type="submit" name="commit" value="Guardar" data-disable-with="Guardar" />
    <%= link_to 'Cancelar', authenticated_root_path, class: 'btn btn-dark' %>
  </form>

</div>
