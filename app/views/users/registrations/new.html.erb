<div class="container col-3 shadow">

  <div class="d-flex justify-content-center title">
    <h2><%= t('.sign_up') %></h2>
  </div>


 <div class="d-flex justify-content-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label 'Tipo de usuario' %><br />
      <%= f.select :user_type, options_for_select([['Admin', 1], ['Recursos financieros', 2], ['Estacionamiento', 3], ['Mantenimiento y limpieza', 4]]) %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit 'Registrarme', class: 'btn btn-primary justify-content-center btn_s' %>
    </div>
    <% end %>

  </div>

<div class="d-flex justify-content-center links">
  <%= render "users/shared/links" %>
</div>

</div>
