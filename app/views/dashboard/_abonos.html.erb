<div class="card-header" id="heading13">
  <h2 class="mb-0 d-flex justify-content-between">
    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse13" aria-expanded="false" aria-controls="collapse13">
      + Abonos
    </button>
    <% if current_user.user_type != 1 %>
      <%= link_to 'Eliminar', "/delete_table?table=dbo.ABONOS&sistema=#{s}", method: :delete, class: 'btn btn-dark' %>
    <% end %>
  </h2>
</div>

<div id="collapse13" class="collapse" aria-labelledby="heading13" data-parent="#accordion">
  <div class="card-body">
    <div style='display: flex; justify-content: space-between;' class='my-2'>
      <p class="border-bottom" id="top">Id</p>
      <p class="border-bottom" id="top">Fecha Pago</p>
      <p class="border-bottom" id="top">Saldo Restante</p>
      <p class="border-bottom" id="top">Monto</p>
      <p class="border-bottom" id="top">Id Renta</p>
      <p class="border-bottom" id="top">Id Ganancia</p>
      <% if current_user.user_type != 1 %>
        <div class="border-bottom" id="top" style='width: 180px; margin-bottom: 1rem'></div>
      <% end %>
    </div>

    <div style='display: flex; flex-direction: column;'>
      <% abonos.each do |e| %>
        <div style='display: flex; justify-content: space-between;' class='my-2'>
          <p><%= e.original_id %></p>
          <p class="<%= 'wrong' if !valid_date?(e.fechapago) %>"><%= e.fechapago %></p>
          <p><%= e.saldorestante %></p>
          <p class="<%= 'wrong' if !valid_number?(e.monto) %>"><%= e.monto %></p>
          <p><%= e.id_renta %></p>
          <p><%= e.id_ganancia %></p>
          <% if current_user.user_type != 1 %>
            <%= render partial: "dashboard/links", locals: { e: e, table: 'dbo.ABONOS' } %>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>
</div>
