<div class="card-header" id="heading2">
  <h2 class="mb-0">
    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse2" aria-expanded="false" aria-controls="collapse2">
      + Empleado
    </button>
  </h2>
</div>

<div id="collapse2" class="collapse" aria-labelledby="heading2" data-parent="#accordion">
  <div class="card-body">
   <div style='display: flex; justify-content: space-between;' class='my-2'>
      <p class="border-bottom" id="top">Id</p>
      <p class="border-bottom" id="top">Nombre</p>
      <p class="border-bottom" id="top">Curp</p>
      <p class="border-bottom" id="top">Id Tipo Empleado</p>
      <div class="border-bottom" id="top" style='width: 180px; margin-bottom: 1rem'></div>
    </div>

    <div style='display: flex; flex-direction: column;'>
      <% empleados.each do |e| %>
        <div class='my-2' style='display: flex; justify-content: space-between;'>
          <p><%= e.id %></p>
          <p><%= e.nombre %></p>
          <p><%= e.curp %></p>
          <p><%= e.id_tipoempleado %></p>
          <%= render partial: "dashboard/links", locals: { e: e, table: 'dbo.EMPLEADOS' } %>
        </div>
      <% end %>
    </div>

  </div>
</div>

