<div class="card-header" id="heading13">
  <h2 class="mb-0 d-flex justify-content-between">
    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse13" aria-expanded="false" aria-controls="collapse13">
      + Accidentes
    </button>
    <% if current_user.user_type != 1 %>
      <%= link_to 'Eliminar', "/delete_table?table=dbo.ACCIDENTES&sistema=#{s}", method: :delete, class: 'btn btn-dark' %>
    <% end %>
  </h2>
</div>

<div id="collapse13" class="collapse" aria-labelledby="heading13" data-parent="#accordion">
  <div class="card-body">
    <div style='display: flex; justify-content: space-between;' class='my-2'>
      <p class="border-bottom" id="top">Id</p>
      <p class="border-bottom" id="top">Fecha</p>
      <p class="border-bottom" id="top">Id Tipo Accidente</p>
      <p class="border-bottom" id="top">Id Empleado</p>
      <p class="border-bottom" id="top">Id √Årea</p>
      <% if current_user.user_type != 1 %>
        <div class="border-bottom" id="top" style='width: 180px; margin-bottom: 1rem'></div>
      <% end %>
    </div>

    <div style='display: flex; flex-direction: column;'>
      <% accidentes.each do |e| %>
        <div style='display: flex; justify-content: space-between;' class='my-2'>
          <p><%= e.original_id %></p>
          <p class='wrong'><%= e.fecha %></p>
          <p><%= e.id_tipoaccidente %></p>
          <p><%= e.id_empleado %></p>
          <p><%= e.id_area %></p>
          <% if current_user.user_type != 1 %>
            <%= render partial: "dashboard/links", locals: { e: e, table: 'dbo.ACCIDENTES' } %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
