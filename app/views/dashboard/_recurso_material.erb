<div class="card-header" id="heading3">
  <h2 class="mb-0">
    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse3" aria-expanded="false" aria-controls="collapse3">
      + Recurso Material
    </button>
  </h2>
</div>

<div id="collapse3" class="collapse" aria-labelledby="heading3" data-parent="#accordion">
  <div class="card-body">
    <div style='display: flex; justify-content: space-between;' class='my-2'>
      <p class="border-bottom" id="top">Id</p>
      <p class="border-bottom" id="top">Nombre</p>
      <p class="border-bottom" id="top">Categoria</p>
      <p class="border-bottom" id="top">Tipo</p>
      <div class="border-bottom" id="top" style='width: 180px; margin-bottom: 1rem'></div>
    </div>

    <div style='display: flex; flex-direction: column;'>
      <% recursos_materiales.each do |e| %>
        <div class='my-2' style='display: flex; justify-content: space-between;'>
          <p><%= e.id %></p>
          <p><%= e.nombre %></p>
          <p><%= e.categoria %></p>
          <p><%= e.tipo %></p>
          <%= render partial: "dashboard/links", locals: { e: e, table: 'dbo.RECURSO_MATERIAL' } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
