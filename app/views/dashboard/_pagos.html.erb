<div class="card-header" id="heading12">
  <h2 class="mb-0 d-flex justify-content-between">
    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse12" aria-expanded="false" aria-controls="collapse12">
      + Pagos
    </button>
    <% if current_user.user_type != 1 %>
      <%= link_to 'Eliminar', "/delete_table?table=dbo.PAGOS&sistema=#{s}", method: :delete, class: 'btn btn-dark' %>
    <% end %>
  </h2>
</div>

<div id="collapse12" class="collapse" aria-labelledby="heading12" data-parent="#accordion">
  <div class="card-body">
    <div style='display: flex; justify-content: space-between;' class='my-2'>
      <p class="border-bottom" id="top">Id</p>
      <p class="border-bottom" id="top">Fecha</p>
      <p class="border-bottom" id="top">Monto</p>
      <p class="border-bottom" id="top">Id Empleado</p>
      <p class="border-bottom" id="top">Id Ganancia</p>
      <% if current_user.user_type != 1 %>
        <div class="border-bottom" id="top" style='width: 180px; margin-bottom: 1rem'></div>
      <% end %>
    </div>

    <div style='display: flex; flex-direction: column;'>
      <% pagos.each do |e| %>
        <div style='display: flex; justify-content: space-between;' class='my-2'>
          <p><%= e.id %></p>
          <p><%= e.fecha %></p>
          <p><%= e.monto %></p>
          <p><%= e.id_empleado %></p>
          <p><%= e.id_ganancia %></p>
          <% if current_user.user_type != 1 %>
            <%= render partial: "dashboard/links", locals: { e: e, table: 'dbo.PAGOS' } %>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>
</div>
