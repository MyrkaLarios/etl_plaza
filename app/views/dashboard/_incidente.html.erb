<div class="card-header" id="heading29">
  <h2 class="mb-0 d-flex justify-content-between">
    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse29" aria-expanded="false" aria-controls="collapse29">
      + Incidente
    </button>
    <% if current_user.user_type != 1 %>
      <%= link_to 'Eliminar', "/delete_table?table=dbo.INCIDENTE&sistema=#{s}", method: :delete, class: 'btn btn-dark' %>
    <% end %>
  </h2>
</div>

<div id="collapse29" class="collapse" aria-labelledby="heading29" data-parent="#accordion">
  <div class="card-body">
    <div style='display: flex; justify-content: space-between;' class='my-2'>
      <p class="border-bottom" id="top">Id</p>
      <p class="border-bottom" id="top">Fecha</p>
      <p class="border-bottom" id="top">Clave Nota Crédito</p>
      <p class="border-bottom" id="top">Clave Nota Débito</p>
      <p class="border-bottom" id="top">Id Tipo Incidente</p>
      <% if current_user.user_type != 1 %>
        <div class="border-bottom" id="top" style='width: 180px; margin-bottom: 1rem'></div>
      <% end %>
    </div>

    <div style='display: flex; flex-direction: column;'>
      <% incidentes.each do |e| %>
        <div style='display: flex; justify-content: space-between;' class='my-2'>
          <p><%= e.id %></p>
          <p><%= e.fecha %></p>
          <p><%= e.clavenotacredito %></p>
          <p><%= e.clavenotadebito %></p>
          <p><%= e.id_tipoincidente %></p>
          <% if current_user.user_type != 1 %>
            <%= render partial: "dashboard/links", locals: { e: e, table: 'dbo.INCIDENTE' } %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
