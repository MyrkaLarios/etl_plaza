<div class="card-header" id="heading3">
  <h2 class="mb-0 d-flex justify-content-between">
    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse3" aria-expanded="false" aria-controls="collapse3">
      + Locales
    </button>
    <% if current_user.user_type != 1 %>
      <%= link_to 'Eliminar', "/delete_table?table=dbo.LOCALES&sistema=#{s}", method: :delete, class: 'btn btn-dark' %>
    <% end %>
  </h2>
</div>


<div id="collapse3" class="collapse" aria-labelledby="heading3" data-parent="#accordion">
  <div class="card-body">
    <div style='display: flex; justify-content: space-between;' class='my-2'>
      <p class="border-bottom" id="top">Id</p>
      <p class="border-bottom" id="top">Número</p>
      <p class="border-bottom" id="top">Ubicación</p>
      <p class="border-bottom" id="top">Dimensiones</p>
      <p class="border-bottom" id="top">Estado</p>
      <p class="border-bottom" id="top">Costo</p>
      <% if current_user.user_type != 1 %>
        <div class="border-bottom" id="top" style='width: 180px; margin-bottom: 1rem'></div>
      <% end %>
    </div>
    <div style='display: flex; flex-direction: column;'>
      <% locales.each do |e| %>
        <div style='display: flex; justify-content: space-between;' class='my-2'>
          <p><%= e.id %></p>
          <p class="<%= 'wrong' if !valid_salary?(e.numero) %>"><%= e.numero %></p>
          <p><%= e.ubicacion %></p>
          <p class="<%= 'wrong' if !valid_dimension?(e.dimensiones) %>"><%= e.dimensiones %></p>
          <p class="<%= 'wrong' if !valid_estado_local?(e.estado) %>"><%= e.estado %></p>
          <p><%= e.costo %></p>
          <% if current_user.user_type != 1 %>
            <%= render partial: "dashboard/links", locals: { e: e, table: 'dbo.LOCALES' } %>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>
</div>
