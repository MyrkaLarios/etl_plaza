<div class="card-header" id="heading24">
  <h2 class="mb-0">
    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse24" aria-expanded="false" aria-controls="collapse24">
      + Tareas
    </button>
  </h2>
</div>

<div id="collapse24" class="collapse" aria-labelledby="heading24" data-parent="#accordion">
  <div class="card-body">
    <div style='display: flex; justify-content: space-between;' class='my-2'>
      <p class="border-bottom" id="top">Id</p>
      <p class="border-bottom" id="top">Duración</p>
      <p class="border-bottom" id="top">Id Servicio</p>
      <p class="border-bottom" id="top">Id Área</p>
      <div class="border-bottom" id="top" style='width: 180px; margin-bottom: 1rem'></div>
    </div>

    <div style='display: flex; flex-direction: column;'>
      <% tareas.each do |e| %>
        <div style='display: flex; justify-content: space-between;' class='my-2'>
          <p><%= e.id %></p>
          <p><%= e.duracion %></p>
          <p><%= e.id_servicio %></p>
          <p><%= e.id_area %></p>
          <%= render partial: "dashboard/links", locals: { e: e, table: 'dbo.TAREA' } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
