<div class="card-header" id="heading27">
  <h2 class="mb-0 d-flex justify-content-between">
    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse27" aria-expanded="false" aria-controls="collapse27">
      + Horario
    </button>
    <% if current_user.user_type != 1 %>
      <%= link_to 'Eliminar', "/delete_table?table=dbo.HORARIO&sistema=#{s}", method: :delete, class: 'btn btn-dark' %>
    <% end %>
  </h2>
</div>

<div id="collapse27" class="collapse" aria-labelledby="heading27" data-parent="#accordion">
  <div class="card-body">
    <div style='display: flex; justify-content: space-between;' class='my-2'>
      <p class="border-bottom" id="top">Id</p>
      <p class="border-bottom" id="top">Hora Inicio</p>
      <p class="border-bottom" id="top">Hora Fin</p>
      <p class="border-bottom" id="top">Fecha Inicio</p>
      <p class="border-bottom" id="top">Fecha Fin</p>
      <p class="border-bottom" id="top">Id Tarea</p>
      <p class="border-bottom" id="top">Id Empleado</p>
      <% if current_user.user_type != 1 %>
        <div class="border-bottom" id="top" style='width: 180px; margin-bottom: 1rem'></div>
      <% end %>
    </div>

    <div style='display: flex; flex-direction: column;'>
      <% horarios.each do |e| %>
        <div style='display: flex; justify-content: space-between;' class='my-2'>
          <p><%= e.id %></p>
          <p><%= e.horainicio %></p>
          <p><%= e.horafin %></p>
          <p class="<%= 'wrong' if !valid_date?(e.fechainicio) %>"><%= e.fechainicio %></p>
          <p class="<%= 'wrong' if !valid_date?(e.fechafin) %>"><%= e.fechafin %></p>
          <p><%= e.id_tarea %></p>
          <p><%= e.id_empleado %></p>
          <% if current_user.user_type != 1 %>
            <%= render partial: "dashboard/links", locals: { e: e, table: 'dbo.HORARIO' } %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
