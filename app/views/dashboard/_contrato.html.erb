<div class="card-header" id="heading7">
  <h2 class="mb-0">
    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse7" aria-expanded="false" aria-controls="collapse7">
      + Contrato
    </button>
  </h2>
</div>

<div id="collapse7" class="collapse" aria-labelledby="heading7" data-parent="#accordion">
  <div class="card-body">
    <div style='display: flex; justify-content: space-between;' class='my-2'>
      <p class="border-bottom" id="top">Id</p>
      <p class="border-bottom" id="top">Fecha Inicio</p>
      <p class="border-bottom" id="top">Fecha Fin</p>
      <p class="border-bottom" id="top">Costo</p>
      <p class="border-bottom" id="top">Id Cliente</p>
      <p class="border-bottom" id="top">Id Local</p>
      <div class="border-bottom" id="top" style='width: 180px; margin-bottom: 1rem'></div>
    </div>

    <div style='display: flex; flex-direction: column;'>
      <% contratos.each do |e| %>
        <div style='display: flex; justify-content: space-between;' class='my-2'>
          <p><%= e.id %></p>
          <p><%= e.fechainicio %></p>
          <p><%= e.fechafin %></p>
          <p><%= e.costo %></p>
          <p><%= e.id_cliente %></p>
          <p><%= e.id_local %></p>
          <%= render partial: "dashboard/links", locals: { e: e, table: 'dbo.CONTRATO' } %>
        </div>
      <% end %>
    </div>

  </div>
</div>
