<div class="card-header" id="heading30">
  <h2 class="mb-0">
    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse30" aria-expanded="false" aria-controls="collapse30">
      + Orden Servicio
    </button>
  </h2>
</div>

<div id="collapse30" class="collapse" aria-labelledby="heading30" data-parent="#accordion">
  <div class="card-body">
    <div style='display: flex; justify-content: space-between;' class='my-2'>
      <p class="border-bottom" id="top">Id</p>
      <p class="border-bottom" id="top">Fecha</p>
      <p class="border-bottom" id="top">Prioridad</p>
      <p class="border-bottom" id="top">Id Tarea</p>
      <p class="border-bottom" id="top">Id Empleado</p>
      <div class="border-bottom" id="top" style='width: 180px; margin-bottom: 1rem'></div>
    </div>

    <div style='display: flex; flex-direction: column;'>
      <% ordenes_servicio.each do |e| %>
        <div style='display: flex; justify-content: space-between;' class='my-2'>
          <p><%= e.id %></p>
          <p><%= e.fecha %></p>
          <p><%= e.prioridad %></p>
          <p><%= e.id_tarea %></p>
          <p><%= e.id_empleado %></p>
          <%= render partial: "dashboard/links", locals: { e: e, table: 'dbo.ORDEN_SERVICIO' } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
