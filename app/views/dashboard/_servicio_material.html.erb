<div class="card-header" id="heading23">
  <h2 class="mb-0 d-flex justify-content-between">
    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse23" aria-expanded="false" aria-controls="collapse23">
      + Servicio Material
    </button>
    <% if current_user.user_type != 1 %>
      <%= link_to 'Eliminar', "/delete_table?table=dbo.SERVICIO_MATERIAL&sistema=#{s}", method: :delete, class: 'btn btn-dark' %>
    <% end %>
  </h2>
</div>

<div id="collapse23" class="collapse" aria-labelledby="heading23" data-parent="#accordion">
  <div class="card-body">
    <div style='display: flex; justify-content: space-between;' class='my-2'>
      <p>Id</p>
      <p>Cantidad</p>
      <p>Id Servicio</p>
      <p>Recurso Material</p>
      <% if current_user.user_type != 1 %>
        <div style='width: 180px;'></div>
      <% end %>
    </div>

    <div style='display: flex; flex-direction: column;'>
      <% servicios_materiales.each do |e| %>
        <div style='display: flex; justify-content: space-between;' class='my-2'>
          <p><%= e.id %></p>
          <p><%= e.cantidad %></p>
          <p><%= e.id_servicio %></p>
          <p><%= e.recurso_material %></p>
          <% if current_user.user_type != 1 %>
            <%= render partial: "dashboard/links", locals: { e: e, table: 'dbo.SERVICIO_MATERIAL' } %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
