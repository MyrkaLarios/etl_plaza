<div class="card-header" id="heading17">
  <h2 class="mb-0">
    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse17" aria-expanded="false" aria-controls="collapse17">
      + Solicitud de Compra
    </button>
  </h2>
</div>

<div id="collapse17" class="collapse" aria-labelledby="heading17" data-parent="#accordion">
  <div class="card-body">
    <div style='display: flex; justify-content: space-between;' class='my-2'>
      <p class="border-bottom" id="top">Id</p>
      <p class="border-bottom" id="top">Cantidad Total</p>
      <p class="border-bottom" id="top">Fecha Emisi√≥n</p>
      <p class="border-bottom" id="top">Costo Total</p>
      <p class="border-bottom" id="top">Id Proveedor</p>
      <p class="border-bottom" id="top">Id Empleadod</p>
      <% if current_user.user_type != 1 %>
        <div class="border-bottom" id="top" style='width: 180px; margin-bottom: 1rem'></div>
      <% end %>
    </div>

    <div style='display: flex; flex-direction: column;'>
      <% solicitudes_compras.each do |e| %>
        <div style='display: flex; justify-content: space-between;' class='my-2'>
          <p><%= e.id %></p>
          <p><%= e.cantidad_total %></p>
          <p><%= e.fechaemision %></p>
          <p><%= e.costototal %></p>
          <p><%= e.id_proveedor %></p>
          <p><%= e.id_empleado %></p>
          <% if current_user.user_type != 1 %>
            <%= render partial: "dashboard/links", locals: { e: e, table: 'dbo.SOLICITUD_COMPRA' } %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
