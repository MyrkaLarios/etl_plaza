<div class="card-header" id="heading1">
  <h2 class="mb-0">
    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse1" aria-expanded="false" aria-controls="collapse1">
      + Tipo empleado
    </button>
  </h2>
</div>

<div id="collapse1" class="collapse" aria-labelledby="heading1" data-parent="#accordion">
  <div class="card-body">
    <div style='display: flex; justify-content: space-between;' class='my-2'>
      <p class="border-bottom" id="top">Id</p>
      <p class="border-bottom" id="top">Nombre</p>
      <p class="border-bottom" id="top">Salario</p>
      <div class="border-bottom" id="top" style='width: 180px; margin-bottom: 1rem' ></div>
    </div>

    <div style='display: flex; flex-direction: column;'>
      <% tipos_empleado.each do |e| %>
        <div style='display: flex; justify-content: space-between;' class='my-2'>
          <p><%= e.id %></p>
          <p><%= e.nombre %></p>
          <p><%= e.salario %></p>
          <%= render partial: "dashboard/links", locals: { e: e, table: 'dbo.TIPO_EMPLEADOS' } %>
        </div>
      <% end %>
    </div>

  </div>
</div>

