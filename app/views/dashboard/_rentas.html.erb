<div class="card-header" id="heading8">
  <h2 class="mb-0 d-flex justify-content-between">
    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse8" aria-expanded="false" aria-controls="collapse8">
      + Rentas
    </button>
    <% if current_user.user_type != 1 %>
      <%= link_to 'Eliminar', "/delete_table?table=dbo.RENTAS&sistema=#{s}", method: :delete, class: 'btn btn-dark' %>
    <% end %>
  </h2>
</div>

<div id="collapse8" class="collapse" aria-labelledby="heading8" data-parent="#accordion">
  <div class="card-body">
    <div style='display: flex; justify-content: space-between;' class='my-2'>
      <p class="border-bottom" id="top">Id</p>
      <p class="border-bottom" id="top">Fecha Cobro</p>
      <p class="border-bottom" id="top">Status Retraso</p>
      <p class="border-bottom" id="top">Status Pagado</p>
      <p class="border-bottom" id="top">Id Contrato</p>
      <% if current_user.user_type != 1 %>
        <div class="border-bottom" id="top" style='width: 180px; margin-bottom: 1rem'></div>
      <% end %>
    </div>

    <div style='display: flex; flex-direction: column;'>
      <% rentas.each do |e| %>
        <div style='display: flex; justify-content: space-between;' class='my-2'>
          <p><%= e.id %></p>
          <p class="<%= 'wrong' if !valid_date?(e.fechacobro) %>"><%= e.fechacobro %></p>
          <p class="<%= 'wrong' if !valid_status_retraso?(e.statusretraso) %>"><%= e.statusretraso %></p>
          <p class="<%= 'wrong' if !valid_status_pago?(e.statuspagado) %>"><%= e.statuspagado %></p>
          <p><%= e.id_contrato %></p>
          <% if current_user.user_type != 1 %>
            <%= render partial: "dashboard/links", locals: { e: e, table: 'dbo.RENTAS' } %>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>
</div>
