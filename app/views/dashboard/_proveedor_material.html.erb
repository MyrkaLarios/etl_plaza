<div class="card-header" id="heading16">
  <h2 class="mb-0 d-flex justify-content-between">
    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse16" aria-expanded="false" aria-controls="collapse16">
      + Proveedor de Material
    </button>
    <% if current_user.user_type != 1 %>
      <%= link_to 'Eliminar', "/delete_table?table=dbo.PROVEEDOR_MATERIAL&sistema=#{s}", method: :delete, class: 'btn btn-dark' %>
    <% end %>
  </h2>
</div>

<div id="collapse16" class="collapse" aria-labelledby="heading16" data-parent="#accordion">
  <div class="card-body">
    <div style='display: flex; justify-content: space-between;' class='my-2'>
      <p class="border-bottom" id="top">Id</p>
      <p class="border-bottom" id="top">Costo</p>
      <p class="border-bottom" id="top">MÃ­nimo</p>
      <p class="border-bottom" id="top">Id Recurso Material</p>
      <p class="border-bottom" id="top">Id Proveedor</p>
      <% if current_user.user_type != 1 %>
        <div class="border-bottom" id="top" style='width: 180px; margin-bottom: 1rem'></div>
      <% end %>
    </div>

    <div style='display: flex; flex-direction: column;'>
      <% proveedores_materiales.each do |e| %>
        <div style='display: flex; justify-content: space-between;' class='my-2'>
          <p><%= e.id %></p>
          <p class="<%= 'wrong' if !valid_salary?(e.costo) %>"><%= e.costo %></p>
          <p class="<%= 'wrong' if !valid_salary?(e.minimo) %>"><%= e.minimo %></p>
          <p><%= e.id_recursomaterial %></p>
          <p><%= e.id_proveedor %></p>
          <% if current_user.user_type != 1 %>
            <%= render partial: "dashboard/links", locals: { e: e, table: 'dbo.PROVEEDOR_MATERIAL' } %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
